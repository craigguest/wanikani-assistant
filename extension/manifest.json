{
    "manifest_version": 2,
    "default_locale": "en",

    "name": "__MSG_extensionName__",
    "version": "0.2.0",
    "description": "__MSG_extensionDescription__",
    "homepage_url": "https://github.com/craigguest/wanikani-assistant",

    "applications": {
        "gecko": {
            "id": "wanikani-assistant@craigguest.dev"
        }
    },

    "permissions": [
        "alarms",
        "storage"
    ],

    "options_ui": {
        "browser_style": true,
        "page": "./pages/options.html"
    },

    "background": {
        "page": "pages/background.html"
    },

    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "16": "images/icon16.png",
            "24": "images/icon24.png",
            "32": "images/icon32.png"
        }
    },

    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}