{
    "manifest_version": 2,
    "default_locale": "en",

    "name": "__MSG_extensionName__",
    "version": "0.0.6",
    "description": "__MSG_extensionDescription__",
    "homepage_url": "https://github.com/craigguest/wanikani-assistant",

    "permissions": [
        "storage"
    ],

    "options_ui": {
        "page": "./pages/options.html"
    },

    "background": {
        "page": "pages/background.html"
    },

    "browser_action": {
        "browser_style": true,
        "default_icon": "images/logo.svg"
    },

    "icons": {
        "48": "images/logo.svg",
        "96": "images/logo.svg"
    }
}