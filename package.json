{
  "name": "wanikani-assistant",
  "version": "0.2.0",
  "description": "WaniKani Assistant, an extension for Firefox.",
  "private": true,
  "scripts": {
    "start": "concurrently \"webpack -w --mode development\" \"web-ext run -s ./extension/ -u about:debugging\"",
    "start-chrome": "node ./build/chrome-launch.js",
    "build": "eslint ./src/*.js && webpack --mode development",
    "lint": "eslint ./src/*.js",
    "package": "webpack --mode production && web-ext sign --channel unlisted -a ./dist/ -s ./extension/ --api-key %FFWE_API_KEY% --api-secret %FFWE_API_SECRET%",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/craigguest/wanikani-assistant.git"
  },
  "keywords": [
    "WaniKani",
    "Japanese",
    "Notifier",
    "Assistant",
    "Review",
    "Lesson"
  ],
  "author": "Craig Guest <craigguest@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/craigguest/wanikani-assistant/issues"
  },
  "homepage": "https://github.com/craigguest/wanikani-assistant#readme",
  "devDependencies": {
    "chrome-launcher": "^0.10.7",
    "concurrently": "^4.1.0",
    "copy-webpack-plugin": "^5.0.3",
    "eslint": "^5.16.0",
    "path": "^0.12.7",
    "require": "^2.4.20",
    "terser-webpack-plugin": "^1.3.0",
    "web-ext": "^3.0.0",
    "webextension-polyfill": "^0.4.0",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2"
  }
}
